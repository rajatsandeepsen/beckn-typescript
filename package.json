{
  "name": "beckn-typescript",
  "description": "Beckn Protocol Client for Typescript",
  "module": "index.ts",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "bun run ./build.ts",
    "prepublishOnly": "bun run type-all && bun run build",

    "json-all": "npm run json-transaction && npm run json-registry && npm run json-meta",
    "json-transaction": "bunx @redocly/cli bundle ./protocol-specifications/api/transaction/components/index.yaml --output ./api/transaction/openapi.json",
    "json-meta": "bunx @redocly/cli bundle ./protocol-specifications/api/meta/components/index.yaml --output ./api/meta/openapi.json",
    "json-registry": "bunx @redocly/cli bundle ./protocol-specifications/api/registry/components/index.yaml --output ./api/registry/openapi.json",

    "type-all": "npm run type-transaction && npm run type-registry && npm run type-meta",
    "type-transaction": "openapi-typescript ./protocol-specifications/api/transaction/components/index.yaml -o ./type/transaction.d.ts",
    "type-registry": "openapi-typescript ./protocol-specifications/api/registry/components/index.yaml -o ./type/registry.d.ts",
    "type-meta": "openapi-typescript ./protocol-specifications/api/meta/components/index.yaml -o ./type/meta.d.ts"
  },
  "devDependencies": {
    "@redocly/cli": "^1.34.3",
    "@types/bun": "latest",
    "@types/node": "latest",
    "bun-plugin-dts": "^0.3.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "openapi-fetch": "^0.14.0",
    "openapi-typescript": "^7.8.0"
  }
}