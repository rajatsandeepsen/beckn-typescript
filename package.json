{
  "name": "beckn-typescript",
  "description": "Beckn Protocol Client for Typescript",
  "module": "index.ts",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "bun run ./build.ts",
    "publish": "npm publish",
    "prepublishOnly": "bun run openapi-all && bun run build",
    "openapi-all": "npm run openapi-transaction && npm run openapi-registry && npm run openapi-meta",
    "openapi-transaction": "openapi-typescript ./protocol-specifications/api/transaction/components/index.yaml -o ./api/transaction.d.ts",
    "openapi-registry": "openapi-typescript ./protocol-specifications/api/registry/components/index.yaml -o ./api/registry.d.ts",
    "openapi-meta": "openapi-typescript ./protocol-specifications/api/meta/components/index.yaml -o ./api/meta.d.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "latest",
    "bun-plugin-dts": "^0.3.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "openapi-fetch": "^0.14.0",
    "openapi-typescript": "^7.8.0"
  }
}